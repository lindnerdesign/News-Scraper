<div class="jumbotron jumbotron-fluid text-center">
		<div class="container">
			<h1 class="display-4">THE ONION PEELER</h1>
			<h4 class="lead">Web scraping so fun it will make you cry.</h4>
			<button class="btn-lg btn-success" id="peeler" type="submit">PEEL IT</button>
		</div>
</div>

{{!-- Articles --}}
<div class="container" id="articles">
  <div class="row">
      <div class="col-sm-12">
        <div id="articles">
          <div class="card-columns">
          {{#each Article}}
            <div class="card bg-gray">
              <div class="card-body">
                <h5 class="card-title" data-id={{this._id}}>{{this.title}}</h5>
                <p class="card-text scroll-box">{{this.summary}}</p>
                <a href="{{this.link}}" class="card-link">Read Full Article</a>
                <i class="far fa-edit more-info" style="font-size: 1.5rem;" id="notemod" data-id="{{this._id}}" data-title="{{this.title}}" data-toggle="modal" data-target="#noteModal"></i><br>
                <button type="button" class="btn btn-outline-secondary btn-sm" id="delArt" data-id="{{this._id}}" data-title="{{this.title}}">Delete</button>     
              </div>
            </div>
          {{/each}}
          </div>
        </div>
        </div>
      </div>
    </div>

{{!-- Modal --}}
  <div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Article Notes:</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body" id="notes">
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Footer --}}
<div class="container-fluid text-center" id="footer">
  <p class="footer-block" style="color:#fff"><a href="https://lindnerdesign.github.io" id="portfolio">Lindsay Lindner 2018</a> | <a href="https://github.com/lindnerdesign"><i class="fab fa-github" id="github" style="font-size: 1rem;></i></a></p>
</div>